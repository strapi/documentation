.sidebar-heading.router-link-active
  color: $primary600 !important

.nav-links a
.nav-links a.router-link-active
  font-weight 600
  color: $neutral700

.nav-links a:hover
.nav-links a.active
.sidebar-link.active
  color: $primary600 !important
