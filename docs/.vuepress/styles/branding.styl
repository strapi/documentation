body
  font-family system-ui
  color $neutral800

a
  color $primary600
  font-weight 600

h1, h2, h3, h4, h5, h6
  color: $neutral900

h2
  border-bottom-color $neutral150

.theme-default-content:not(.custom)
  max-width 840px

.theme-default-content code
  background-color $primary100
  color $primary600
  border-radius 4px
